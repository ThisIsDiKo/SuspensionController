<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dikoresearchsuspensioncontroller">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <application
        android:name=".SuspensionControllerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bag"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bag_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuspensionController">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SuspensionController">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>